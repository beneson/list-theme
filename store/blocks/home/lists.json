{
    "flex-layout.row#lists":{
        "children": ["flex-layout.col#home-lists"]
      },
      "flex-layout.col#home-lists":{
        "children":[
          "flex-layout.row#home-top-desktop",
          "flex-layout.row#home-main-desktop",
          "flex-layout.row#home-bottom-desktop-1"
        ]
      },
      "flex-layout.row#home-top-desktop": {
        "children": [
          "flex-layout.row#home-desktop-title"
        ]
      },
      "flex-layout.row#home-desktop-title": {
        "children": [
          "rich-text#home-top-desktop-title"
        ],
        "props": {
          "fullWidth": true
        }
      },
      "rich-text#home-top-desktop-title": {
        "props": {
          "blockClass": "home-top-desktop",
          "textAlignment": "CENTER",
          "textPosition": "CENTER",
          "text": "Minhas Listas",
          "font": "t-heading-3"
        }
      },
      "flex-layout.row#home-main-desktop": {
        "children": [
          "flex-layout.row#home-main-desktop-list"
        ]
      },
      "flex-layout.row#home-main-desktop-list": {
        "children": [
          "user-lists"
        ],
        "props": {
          "blockClass": [
            "container"
          ]
        }
      },
      "flex-layout.row#home-bottom-desktop-1":{
        "children": ["flex-layout.row#home-bottom-desktop"]
      },
      "flex-layout.row#home-bottom-desktop": {
        "children": [
          "modal-trigger#home-bottom-desktop"
        ],
        "props": {
          "blockClass": [
            "container",
            "home-bottom-desktop-list"
          ]
        }
      },
      "modal-trigger#home-bottom-desktop": {
        "children": [
          "rich-text#home-bottom-desktop",
          "modal-layout#home-bottom-desktop"
        ]
      },
      "rich-text#home-bottom-desktop": {
        "props": {
          "text": "![](assets/add.svg) CRIAR LISTA",
          "textAlignment": "CENTER",
          "textPosition": "CENTER",
          "blockClass": "home-bottom-desktop-button"
        }
      },
      "modal-layout#home-bottom-desktop": {
        "children": [
          "modal-header#home-bottom-desktop",
          "create-list-form"
        ],
        "props": {
          "blockClass": "home-bottom-desktop",
          "fullScreen" : "true"
        }
      },
      "modal-header#home-bottom-desktop": {
        "children": [
          "rich-text#modal-header-title"
        ],
        "props": {
          "blockClass":["container","home-bottom-desktop"],
          "showCloseButton": true
        }
      },
      "rich-text#modal-header-title": {
        "props": {
          "text": "Criar Lista",
          "textAlignment": "LEFT",
          "blockClass": "modal-header-title"
        }
      },
      "modal-actions.close#home-bottom-desktop": {
        "props": {
          "label": "Cancelar"
        }
      }
}